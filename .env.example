# Flask Environment Configuration
FLASK_ENV=development
FLASK_DEBUG=1

# Security Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-here-change-this
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this

# Database Configuration
DATABASE_URL=sqlite:///respiratory_system.db
# For PostgreSQL: postgresql://username:password@localhost/database_name

# File Storage Configuration
UPLOAD_FOLDER=./static/uploads
MAX_CONTENT_LENGTH=16777216

# Machine Learning Model Configuration
MODEL_PATH=./ml/models/
AUDIO_SAMPLE_RATE=22050
AUDIO_DURATION=30
MFCC_FEATURES=13
SPECTROGRAM_HEIGHT=128
SPECTROGRAM_WIDTH=128

# Model Performance Thresholds
CONFIDENCE_THRESHOLD=0.7
MIN_AUDIO_QUALITY=0.6

# Redis Configuration (Optional - for rate limiting and caching)
REDIS_URL=redis://localhost:6379/0

# AWS S3 Configuration (Optional - for cloud file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=us-east-1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Email Configuration (Optional - for password reset)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# External API Keys (Optional - for additional services)
OPENAI_API_KEY=your-openai-api-key
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key